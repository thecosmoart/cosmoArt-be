{
  "kind": "collectionType",
  "collectionName": "addresses",
  "info": {
    "singularName": "address",
    "pluralName": "addresses",
    "displayName": "Address",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "city": {
      "type": "string"
    },
    "country": {
      "type": "string",
      "regex": "^[A-Z]{2}$"
    },
    "street": {
      "type": "string"
    },
    "zip": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "first_name": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "regex": "^\\+(?:[0-9] ?){6,14}[0-9]$"
    },
    "apartment_number": {
      "type": "string",
      "regex": "^(\\d{1,5})?$"
    },
    "last_name": {
      "type": "string"
    }
  }
}
