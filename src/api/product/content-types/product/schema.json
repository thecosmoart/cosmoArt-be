{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "unique": false,
      "required": true,
      "min": 0.01
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "sort_order": {
      "type": "integer",
      "required": false,
      "unique": false,
      "default": 10000
    },
    "amount": {
      "type": "biginteger",
      "default": "0",
      "min": "0"
    }
  }
}
